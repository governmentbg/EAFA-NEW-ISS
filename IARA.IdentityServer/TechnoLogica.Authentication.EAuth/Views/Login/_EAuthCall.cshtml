@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div>
    <noscript>
        <p>
            <strong>Важно:</strong> Моля, натиснете бутон „Изпрати”, за да изпратите формата
        </p>
    </noscript>
    <form asp-controller="External"
          asp-action="ChallengePost"
          method="post"
          asp-antiforgery="false"
          asp-route-provider="@ViewBag.AuthenticationScheme"
          asp-route-returnUrl="@ViewBag.ReturnUrl">
        <input type="hidden" name="SAMLRequest" value="@ViewBag.EAuthHandlerSAMLRequest" />
        <input type="hidden" name="RelayState" value="@ViewBag.EAuthHandlerRelayState" />
        <noscript>
            <div>
                <input type="submit" value="Изпрати" />
            </div>
        </noscript>
    </form>
    <div class="redirecting-text">
        <span>Пренасочване към eAuth...</span>
    </div>
    <div class="spinner">
        <div class="bounce1"></div>
        <div class="bounce2"></div>
        <div class="bounce3"></div>
    </div>
</div>
@section scripts
{
    <script src="~/_content/TechnoLogica.Authentication.EAuth/js/auto-submit.js" type="text/javascript"></script>
}